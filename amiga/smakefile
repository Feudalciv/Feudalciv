FREECIV_DIR = /
DESTDIR = Development:Projects/freeciv

CCFLAGS = ANSI IDLEN=40 NOLINK MATH=IEEE MCCONS COMMENTNEST DATA=far NOSTKCHK IGNORE=51,63

COMMONOBJS = common/astring.o common/capability.o common/capstr.o common/city.o common/diptreaty.o common/fcintl.o \
             common/game.o common/genlist.o common/government.o common/inputfile.o common/log.o common/map.o common/nation.o common/packets.o common/player.o common/mem.o common/registry.o \
             common/sbuffer.o common/shared.o common/spaceship.o common/tech.o common/timing.o common/unit.o
COMMONDIRS = DEF=HAVE_CONFIG_H IDIR=`cd` IDIR=${FREECIV_DIR}common

AIOBJS = ai/advattitude.o ai/advdomestic.o ai/advforeign.o \
         ai/advisland.o ai/advleader.o ai/advmilitary.o ai/advscience.o ai/advspace.o \
         ai/advtrade.o ai/aicity.o ai/aihand.o ai/aitech.o ai/aitools.o ai/aiunit.o
AIDIRS = DEF=HAVE_CONFIG_H IDIR=`cd` IDIR=${FREECIV_DIR}common IDIR=${FREECIV_DIR}server

SERVEROBJS = server/autoattack.o server/barbarian.o server/cityhand.o server/citytools.o server/cityturn.o \
             server/civserver.o server/console.o server/diplhand.o server/gamehand.o server/gamelog.o server/gotohand.o \
             server/handchat.o server/mapgen.o server/maphand.o server/meta.o server/plrhand.o server/ruleset.o server/sernet.o \
             server/settlers.o server/spacerace.o server/stdinhand.o server/unitfunc.o server/unithand.o server/unittools.o
SERVERDIRS = DEF=HAVE_CONFIG_H IDIR=`cd` IDIR=${FREECIV_DIR}server IDIR=${FREECIV_DIR}common IDIR=${FREECIV_DIR}ai

CGP = /client/gui-mui/

CLIENTOBJS = client/gui-mui/gui_main.o client/gui-mui/overviewclass.o client/gui-mui/mapclass.o client/gui-mui/muistuff.o client/civclient.o client/climisc.o client/clinet.o client/control.o client/helpdata.o client/options.o client/packhand.o client/tilespec.o
CLIENTDIRS = DEF=HAVE_CONFIG_H IDIR=`cd`  IDIR=${FREECIV_DIR}client IDIR=${FREECIV_DIR}common IDIR=${FREECIV_DIR}client/include

CLIENTGUIOBJS1 = client/gui-mui/chatline.o client/gui-mui/citydlg.o client/gui-mui/cityrep.o \
                 client/gui-mui/colors.o client/gui-mui/connectdlg.o client/gui-mui/dialogs.o client/gui-mui/diplodlg.o client/gui-mui/finddlg.o client/gui-mui/gamedlgs.o \
                 client/gui-mui/gotodlg.o client/gui-mui/helpdlg.o
CLIENTGUIOBJS2 = client/gui-mui/inteldlg.o client/gui-mui/mapctrl.o client/gui-mui/mapview.o client/gui-mui/messagedlg.o \
                 client/gui-mui/messagewin.o client/gui-mui/plrdlg.o client/gui-mui/repodlgs.o client/gui-mui/spaceshipdlg.o client/gui-mui/objecttreeclass.o
CLIENTGUIOBJS  = ${CLIENTGUIOBJS1} ${CLIENTGUIOBJS2}
CLIENTGUIDIRS  = IDIR=${FREECIV_DIR}common IDIR=${FREECIV_DIR}client/include IDIR=${FREECIV_DIR}client

All: dirs civserver civclient

dirs:
  execute makedirs

civserver: ai/libcivai.lib common/libcivcommon.lib server/amigaserver.o _main.o ${SERVEROBJS}
  sc link with <<
FROM server/amigaserver.o _main.o ${SERVEROBJS}
LIB ai/libcivai.lib common/libcivcommon.lib
TO civserver
<

# AI Files

ai/libcivai.lib: ${AIOBJS}
  run >NIL: <NIL: delete quiet $@
  wait 1
  oml $@ a ${AIOBJS}

ai/advattitude.o: ${FREECIV_DIR}ai/advattitude.c
