#!/usr/bin/make -f
# Made with the iad of dh_make, by Craig Small
# Sample debian/rules that uses debhelper. GNU copyright 1997 by Joey Hess.
# Also some stuff taken from debmake scripts, by Cristopt Lameter.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

build: build-xaw build-xaw3d build-gtk build-base
build-stamp:
	dh_testdir

	touch build-stamp

build-base:
	dh_testdir

	mkdir build-base
	(cd build-base; ../configure --prefix=/usr --datadir=/usr/share/games --bindir=/usr/games --disable-client; $(MAKE))

build-xaw:
	dh_testdir

	mkdir build-xaw
	(cd build-xaw; ../configure --prefix=/usr --datadir=/usr/share/games --bindir=/usr/games --with-xaw --disable-server; $(MAKE))

build-xaw3d:
	dh_testdir

	mkdir build-xaw3d
	(cd build-xaw3d; ../configure --prefix=/usr --datadir=/usr/share/games --bindir=/usr/games --with-xaw3d --disable-server; $(MAKE))

build-gtk:
	dh_testdir

	mkdir build-gtk
	(cd build-gtk; ../configure --prefix=/usr --datadir=/usr/share/games --bindir=/usr/games --disable-server; $(MAKE))

clean:
	dh_testdir
	dh_testroot
	-rm -Rf build-stamp build-xaw3d build-xaw build-gtk build-base install-stamp
	dh_clean

	-rm -f debian/*~ Makefile Makefile.bak core */Makefile

install: install-stamp
install-stamp: build-stamp
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	dh_installdirs -pfreeciv-xaw
	dh_installdirs -pfreeciv-xaw3d
	dh_installdirs -pfreeciv-gtk

	(cd build-base; $(MAKE) DESTDIR=`pwd`/../debian/tmp install)
	(cd build-xaw; $(MAKE) DESTDIR=`pwd`/../debian/freeciv-xaw install)
	mv debian/freeciv-xaw/usr/games/civclient debian/freeciv-xaw/usr/games/civclient-xaw.real
	rm -rf debian/freeciv-xaw/usr/share
	(cd build-xaw3d; $(MAKE) DESTDIR=`pwd`/../debian/freeciv-xaw3d install)
	mv debian/freeciv-xaw3d/usr/games/civclient debian/freeciv-xaw3d/usr/games/civclient-xaw3d
	rm -rf debian/freeciv-xaw3d/usr/share
	(cd build-gtk; $(MAKE) DESTDIR=`pwd`/../debian/freeciv-gtk install)
	mv debian/freeciv-gtk/usr/games/civclient debian/freeciv-gtk/usr/games/civclient-gtk
	rm -rf debian/freeciv-gtk/usr/share

	touch install-stamp

# Build architecture-independent files here (ie none).
binary-indep:

# Build architecture-dependent files here.
binary-arch: build install
#	dh_testversion
	dh_testdir
	dh_testroot
	dh_installdocs -pfreeciv
	ln -fs freeciv debian/freeciv-xaw/usr/doc/freeciv-xaw
	ln -fs freeciv debian/freeciv-xaw3d/usr/doc/freeciv-xaw3d
	ln -fs freeciv debian/freeciv-gtk/usr/doc/freeciv-gtk
	dh_installexamples
	dh_installmenu
	dh_installxaw
	dh_installmanpages
#	/usr/bin/install debian/xaw-wrappers debian/tmp/usr/lib/xaw-wrappers/conf/freeciv
#	dh_undocumented
	dh_installchangelogs -pfreeciv
	dh_strip
	dh_strip -pfreeciv-xaw
	dh_strip -pfreeciv-xaw3d
	dh_strip -pfreeciv-gtk
	dh_compress
	dh_fixperms
	dh_suidregister
	dh_installdeb
	dh_installdeb -pfreeciv-xaw
	dh_installdeb -pfreeciv-xaw3d
	dh_installdeb -pfreeciv-gtk
	dh_shlibdeps
	dh_shlibdeps -pfreeciv-xaw
	dh_shlibdeps -pfreeciv-xaw3d
	dh_shlibdeps -pfreeciv-gtk
	dh_gencontrol
	dh_gencontrol -pfreeciv-xaw
	dh_gencontrol -pfreeciv-xaw3d
	dh_gencontrol -pfreeciv-gtk
#	dh_makeshlibs
	dh_md5sums
	dh_md5sums -pfreeciv-xaw
	dh_md5sums -pfreeciv-xaw3d
	dh_md5sums -pfreeciv-gtk
	dh_builddeb
	dh_builddeb -pfreeciv-xaw
	dh_builddeb -pfreeciv-xaw3d
	dh_builddeb -pfreeciv-gtk

source diff:
	@echo 'source and diff are obsolete - use dpkg-source -b' >&2 ; false

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
