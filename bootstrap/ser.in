BUILDDIR=`dirname $0`
EXENAME=civserver@EXEEXT@

# Use cd + pwd instead of manual concatentation in case of absolute paths
BUILDDATA=$(cd $BUILDDIR/data ; pwd)
SRCDATA=$(cd $BUILDDIR ; cd @top_srcdir@/data ; pwd)

if [ "x$FREECIV_PATH" = "x" ] ; then
  FREECIV_PATH=".@HOST_PATH_SEPARATOR@data@HOST_PATH_SEPARATOR@~/.freeciv"
fi
export FREECIV_PATH="${FREECIV_PATH}@HOST_PATH_SEPARATOR@${BUILDDATA}@HOST_PATH_SEPARATOR@${SRCDATA}"

[ -x $BUILDDIR/server/$EXENAME ] && EXE=$BUILDDIR/server/$EXENAME
[ -x $BUILDDIR/$EXENAME ] && EXE=$BUILDDIR/$EXENAME

if [ "$EXE" = "" ]; then
  echo $0: Unable to find $EXENAME.
  exit 1
fi

exec $EXE ${1+"$@"}
